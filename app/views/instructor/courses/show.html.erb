<script>
  $(function() {
    $('.lessons').sortable({
   
      update: function( event, ui ) {
            $.ajax({
              type: 'PUT',
              url: ui.item.data('update-url'),
              dataType: 'json',
              data: { lesson: { row_order_position: ui.item.index() } }
           });
      }
    });

     $('.sections').sortable({
          update: function( event, ui ) {
            $.ajax({
            type: 'PUT',
            url: ui.item.data('update-url'),
            dataType: 'json',
            data: { section: { row_order_position: ui.item.index() } }
        });
            alert("UpdateSectionUrl: " + ui.item.data('update-url') + " Index: " + ui.item.index());
            
          }
     });
  });
</script>
<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center course-show-heading"><%= current_course.title %></h1>
  <br />
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning pull-right' %>
  <br class="clr" />
  
  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul class = "sections">
    <!-- % current_course.sections.each do |section| % -->
     <% current_course.sections.rank(:row_order).each do |section| %>
