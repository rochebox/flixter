<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new course</h1>
  <div class="booyah-session-info">
      <%= simple_form_for @course, url: instructor_courses_path do |f| %>
        
        <%= f.input :title , input_html: { class: "booyah-session-input" } %>
        <%= f.input :description , input_html: { class: "booyah-session-input" } %>
        <%= f.input :cost , input_html: { class: "booyah-session-input" } %>
        <br />
        <%= f.submit "Create", class: 'btn btn-primary' %>
     
        <br />
      <% end %>
      <br />
  </div>
</div>