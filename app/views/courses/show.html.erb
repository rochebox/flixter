<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
 
        <h1 class="course-show-heading">
        	<%= @course.title %>
        </h1>
        <br />
        <div class="booyah-show-image">
            <% if @course.image != nil %>
            <%= image_tag @course.image.imageupload, :class => "booyah-show-image" %>
 
            
            <% end %>
        </div>
  

      <div class="col-sm-4 col-xs-12 text-center">
        <br />
      	<span class="label label-default">
        	<%= number_to_currency @course.cost %>
        </span>
        <% if current_user && current_user == @course.user %>
        	<br />
        	<br />
        	<%= link_to 'Administrator', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
        <% end %>

      </div>
      <div class="col-sm-8 col-xs-12">
                  <p class="text-left course-inspirational-msg"> <%=@course.image.caption %> </p>

                  <div class="text-left course-show-right-pad">
                      <%= @course.description %>
                  </div>          
     </div>
     <br class="clr" />
     <br />

</div>  <!-- end of booyah box -->

<br class="clr" />
<br class="clr" />

<div class="col-xs-10 col-xs-offset-1 text-center course-show-syllabus-heading">
  Syllabus (course details)...
</div>
<br class="clr" />
<br />
<div class=" col-xs-8 col-xs-offset-2">
    <% count = 1 %>
    <% @course.sections.each do |section| %>
      <div class="section course-section-styling">
        Section <%= count.to_s %>: <%= section.title %>
        <% count +=1 %>
        <ul>
        <% section.lessons.each do |lesson| %>
          <div class="lesson course-lesson-styling">
            <li>
            <%= link_to lesson_path(lesson) do %>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            <% end %>  
          </li>
          </div>
        <% end %>
      </ul>
      </div>
    <% end %>
  </div>


